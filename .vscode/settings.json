{
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"yaml.schemas": {
		"https://taskfile.dev/schema.json": "Taskfile.global.yml"
	},
	"shellformat.flag": "-ci -sr -kp --indent 0",
	// Hmm. Not thrilled with shfmt defaults and extensibilty at the moment
	// Also, the extension doesn't respect `formatOnSave`, so this is a hacky noop workaround
	// https://github.com/foxundermoon/vs-shell-format/issues/303
	"shellformat.effectLanguages": [],
	"[shellscript]": {
		"editor.formatOnSave": false
	},
	"[yaml]": {
		"editor.tabSize": 2,
		"editor.defaultFormatter": "redhat.vscode-yaml"
	}
}
