#!/usr/bin/env bash
# Don't use `set -e`

alias list="ls -halt"
alias gtask="task -t ~/Taskfile.global.yml"

# Git
alias git-search="git log -p -G"
alias gca="git commit --amend"
alias gcan="git commit --amend --no-edit"
alias gl="git log"
alias git-commit-skip-hooks="git commit --no-verify"
