# Make sure that you call with "$@", not "$*"
check_args_for_value() {
	local search_value="$1"
	shift
	for arg in "$@"; do
		# Note: -x is to force exact whole-line match
		if (echo "$arg" | grep -qx -- "$search_value"); then
			return 0
		fi
	done
	return 1
}

